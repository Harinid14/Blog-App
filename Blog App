<body>

    <div class="container">
        <h1>Simple Local Blog</h1>

        <div id="create-post-section">
            <h2>‚úçÔ∏è Create New Post</h2>
            <input type="text" id="post-title" placeholder="Enter post title" required>
            <textarea id="post-content" placeholder="Write your post content here..." required></textarea>
            <button class="primary-btn" onclick="addPost()">Publish Post</button>
        </div>

        <div id="view-posts-section">
            <h2>üìú Blog Posts</h2>
            <div id="posts-list">
                </div>
            <p id="no-posts-message" style="text-align: center; color: var(--text-gray);">
                No posts found. Create one above!
            </p>
        </div>
    </div>

    <script>
        const STORAGE_KEY = 'blogPosts';
        const postsListElement = document.getElementById('posts-list');
        const noPostsMessage = document.getElementById('no-posts-message');
        function getPosts() {
            const postsJson = localStorage.getItem(STORAGE_KEY);
            return postsJson ? JSON.parse(postsJson) : [];
        }
        function savePosts(posts) {
            localStorage.setItem(STORAGE_KEY, JSON.stringify(posts));
        }
        function addPost() {
            const titleInput = document.getElementById('post-title');
            const contentInput = document.getElementById('post-content');

            const title = titleInput.value.trim();
            const content = contentInput.value.trim();

            if (!title || !content) {
                alert('Please enter both a title and content for your post.');
                return;
            }

            const posts = getPosts();
            const newPost = {
                id: Date.now(),
                title: title,
                content: content,
                date: new Date().toLocaleDateString()
            };

            posts.unshift(newPost);
            savePosts(posts);
            titleInput.value = '';
            contentInput.value = '';
            displayPosts();
        }
        function displayPosts() {
            const posts = getPosts();
            postsListElement.innerHTML = ''; 

            if (posts.length === 0) {
                noPostsMessage.style.display = 'block';
                return;
            }
            noPostsMessage.style.display = 'none';

            posts.forEach(post => {
                const postCard = document.createElement('div');
                postCard.className = 'post-card';
                
                const deleteButton = `<button class="delete-btn" onclick="deletePost(${post.id})">Delete</button>`;

                postCard.innerHTML = `
                    ${deleteButton}
                    <h2>${post.title}</h2>
                    <p>${post.content}</p>
                    <div class="post-meta">Published on: ${post.date}</div>
                `;
                
                postsListElement.appendChild(postCard);
            });
        }
        function deletePost(idToDelete) {
            if (!confirm("Are you sure you want to delete this post?")) {
                return;
            }
            
            let posts = getPosts();
            posts = posts.filter(post => post.id !== idToDelete);
            
            savePosts(posts);
            displayPosts(); 
        }
        window.onload = displayPosts;

    </script>

</body>
